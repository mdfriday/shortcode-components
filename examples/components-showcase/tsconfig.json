{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "resolveJsonModule": true,
    "baseUrl": "../../"
  },
  "include": [
    "src/**/*",
    "../../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
} 