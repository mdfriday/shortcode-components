{
  "name": "tailwind-theme-system",
  "version": "1.0.0",
  "description": "Multi-theme system with light/dark modes using Tailwind CSS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "serve": "ts-node src/server.ts",
    "build-css": "tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch"
  },
  "dependencies": {
    "@mdfriday/shortcode-compiler": "^0.2.4",
    "express": "^4.18.2",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "tailwind",
    "theme",
    "dark-mode",
    "pokemon",
    "shortcode"
  ],
  "author": "MDFriday",
  "license": "MIT"
} 