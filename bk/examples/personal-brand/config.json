{
    "theme": {
        "name": "modern-minimal",
        "colors": {
            "primary": "#0066cc",
            "secondary": "#6c757d",
            "success": "#28a745",
            "background": "#ffffff",
            "text": "#212529",
            "light": "#f8f9fa",
            "dark": "#343a40"
        },
        "fonts": {
            "heading": "Inter, sans-serif",
            "body": "Inter, system-ui, -apple-system, sans-serif"
        },
        "spacing": {
            "section": "5rem",
            "container": "1200px"
        }
    },
    "style": {
        "framework": "tailwind",
        "prefix": "pb-",
        "components": {
            "hero": {
                "base": "relative min-h-[80vh] flex items-center justify-center text-white",
                "variants": {
                    "centered": "text-center",
                    "left-aligned": "text-left"
                }
            },
            "section": {
                "base": "py-20",
                "variants": {
                    "light": "bg-light",
                    "dark": "bg-dark text-white"
                }
            },
            "container": {
                "base": "max-w-[1200px] mx-auto px-4"
            },
            "profile-card": {
                "base": "bg-white rounded-lg shadow-lg p-8",
                "variants": {
                    "compact": "p-4",
                    "expanded": "p-12"
                }
            },
            "skill-card": {
                "base": "bg-white rounded-lg shadow p-6",
                "variants": {
                    "featured": "border-l-4 border-primary"
                }
            },
            "project-card": {
                "base": "bg-white rounded-lg shadow-lg overflow-hidden",
                "variants": {
                    "featured": "border-2 border-primary"
                }
            },
            "post-card": {
                "base": "bg-white rounded-lg shadow-lg overflow-hidden",
                "variants": {
                    "featured": "border-t-4 border-primary"
                }
            },
            "contact-form": {
                "base": "max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-8",
                "variants": {
                    "compact": "p-4",
                    "bordered": "border-2"
                }
            },
            "footer": {
                "base": "bg-dark text-white py-12",
                "variants": {
                    "minimal": "py-6",
                    "expanded": "py-20"
                }
            }
        }
    }
} 